
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2> Connection</h2>
@using(Html.BeginForm())
{
<div class="form-horizontal">
    <div class="form-group">
        @Html.Label("Login", new { @class = "control-label col-md-2" })
        @Html.Editor("Elogin", new { htmlAttributes = new { @class = "form-control col-md-8" } })  
    </div>

    <div class="form-group">
        @Html.Label("Mot de passe", new { @class = "control-label col-md-2" })
        @Html.Editor("Mpasse", new { htmlAttributes = new { @class = "form-control col-md-8" } })
    </div> 

    <div class="form-group col-md-10">
        <input name="connect" type="submit" value="Connect" class="btn btn-primary col-md-offset-6 "/>
        <input name="connect" type="submit" value="Cancel" class="btn btn-success" />
    </div>
    <br/>
</div>
}
